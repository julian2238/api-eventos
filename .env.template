# Server Configuration
PORT=8000
NODE_ENV=development

# Firebase Configuration (using application default credentials)
# Set GOOGLE_APPLICATION_CREDENTIALS environment variable to your service account key file
# Or use gcloud auth application-default login
FIREBASE_PROJECT_ID=your-project-id

# Firebase Auth URLs
URL_SIGNIN=https://identitytoolkit.googleapis.com/v1/accounts:signInWithPassword?key=
API_KEY=your-firebase-api-key

# JWT Configuration
JWT_ACCESS_SECRET=your-super-secret-access-token-key
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# CORS Configuration
CORS_ORIGIN=*
